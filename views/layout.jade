doctype html
html(ng-app='chanakyaApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Find cheapest ride for yourself')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    
    title=title

    link(rel="shortcut icon", href=url.cdnImagePrefix + "/images/favicon.ico", type="image/x-icon")
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//akush.github.io/taxistop/styles/social-btn.css')
    if isProd
        link(rel='stylesheet', href='/build/style.css')
    else
        link(rel='stylesheet', href='/stylesheets/style.css')

    script.
      window.CDN_IMAGE_PREFIX = '#{url.cdnImagePrefix}';
      window.GOOGLE_API = '#{url.gMapsAPI}';
    script(src='https://maps.googleapis.com/maps/api/js?libraries=places&key=' + url.gMapsAPI)
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.11/angular.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.11/angular-sanitize.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.11/angular-route.min.js')
    script(src='https://cdn.firebase.com/js/client/2.2.0/firebase.js')
    script(src='https://cdn.firebase.com/libs/angularfire/0.9.2/angularfire.min.js')
    script(src='http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha1.js')
    script(src='http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/aes.js')
    script(src='http://crypto-js.googlecode.com/svn/tags/3.1.2/build/components/core-min.js')
    script(src='http://crypto-js.googlecode.com/svn/tags/3.1.2/build/components/enc-base64-min.js')
    
  body
    block content
