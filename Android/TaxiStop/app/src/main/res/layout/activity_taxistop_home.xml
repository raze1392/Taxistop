<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".TaxiStopHome">

    <ImageView android:id="@+id/taxiStopSplash"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:background="@color/semi_white_overlay"
        android:src="@drawable/taxistop"
        />

    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/taxiStopWebView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        />

</FrameLayout>
